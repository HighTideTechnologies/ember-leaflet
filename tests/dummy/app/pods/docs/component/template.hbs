<div class="docs-md">

  <h1 class="docs-md__h1">{{concat "<" (classify this.componentName) "/>"}}</h1>

  {{#if (is-component (concat this.componentName "-example"))}}
    {{component (concat this.componentName "-example")}}
  {{/if}}

  {{#if this.superclassName}}
    <p>This component inherits <DocsLink @route="docs.component" @model={{this.superclassName}}>{{this.superclassName}}</DocsLink>.</p>
  {{else}}
    <p>This is a top level class.</p>
  {{/if}}

  {{#if this.leafletRequiredOptions}}
    <p><strong>{{this.componentName}}</strong> component has the following <strong>required options</strong>:</p>
    <ul>
      {{#each this.leafletRequiredOptions as |prop|}}
        <li>{{prop}}</li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if this.leafletProperties}}
    <p><strong>{{this.componentName}}</strong> component has the following bound options:</p>
    <ul>
      {{#each this.leafletProperties as |prop|}}
        <li>
          <a target="_blank" rel="noopener noreferrer" href="{{this.leafletUrlPrefix}}-{{lowercase (split prop 0)}}" class="docs-md__a">
            {{split prop 0}}
            <small>(uses {{if (split prop 1) (split prop 1) (concat "set" (classify (split prop 0)))}}())</small>
          </a>
        </li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if this.leafletOptions}}
    <p><strong>{{this.componentName}}</strong> component supports the following options:</p>
    <ul>
      {{#each this.leafletOptions as |option|}}
        <li><a target="_blank" rel="noopener noreferrer" href="{{this.leafletUrlPrefix}}-{{lowercase option}}" class="docs-md__a">{{option}}</a></li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if this.leafletStyleProperties}}
    <p>
      Style options are bound. This means that you can change any style property
      and the leaflet layer will update its styles reflecting that change.
      <strong>{{this.componentName}}</strong> component supports the following style options:
    </p>
    <ul>
      {{#each this.leafletStyleProperties as |option|}}
        <li><a target="_blank" rel="noopener noreferrer" href="{{this.leafletUrlPrefix}}-{{lowercase option}}" class="docs-md__a">{{option}}</a></li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if this.leafletEvents}}
    <p><strong>{{this.componentName}}</strong> component supports the following actions:</p>
    <ul>
      {{#each this.leafletEvents as |event|}}
        <li><a target="_blank" rel="noopener noreferrer" href="{{this.leafletUrlPrefix}}-{{lowercase event}}" class="docs-md__a">on{{classify event}}</a></li>
      {{/each}}
    </ul>
  {{/if}}

</div>